int entree_opto = 2;
int sortie_led = 13;

void setup()
{
  pinMode( entree_opto, INPUT );
  pinMode( sortie_led, OUTPUT );
}

void loop()
{
  if ( digitalRead( entree_opto ) == LOW )
  {
    digitalWrite( sortie_led, HIGH );
  }
  else
  {
    digitalWrite( sortie_led, LOW );
  }
}
